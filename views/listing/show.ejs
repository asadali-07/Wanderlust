<% layout("/layouts/boilerplate.ejs") %>
<script>
  const mapToken="<%= process.env.MAP_TOKEN %>"
  const listing=<%-JSON.stringify(listing)%>
</script>
<div class="row">
  <div class="container my-5">
    <div class="col-10 offset-1">
      <!-- Title -->
      <h1 class="fw-bold mb-4 text-danger">
        <i class="bi bi-house-door"></i> <%= listing.title %>
      </h1>

      <!-- Card -->
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <img
          src="<%= listing.image.url %>"
          class="card-show-image show-image"
          alt="Listing Image"
        />
        <div class="card-body p-4">
          <p class="card-text text-muted">
            Owned By: <b class="text-dark"><%= listing.owner.username %></b>
          </p>
          <p class="card-text"><%= listing.description %></p>

          <div class="d-flex justify-content-between align-items-center my-3">
            <span class="fs-4 fw-semibold text-success">
              &#8377; <%= listing.price.toLocaleString() %>
              <small class="text-muted">/ night</small>
            </span>
            <span
              class="badge bg-danger-subtle text-danger rounded-pill px-3 py-2"
            >
              <%= listing.category %>
            </span>
          </div>

          <p class="card-text mb-1">
            <i class="bi bi-geo-alt-fill text-danger"></i> <%= listing.location
            %>
          </p>
          <p class="card-text">
            <i class="bi bi-flag-fill text-info"></i> <%= listing.country %>
          </p>
        </div>
      </div>

      <!-- Buttons for owner -->
      <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
      <div class="row mt-4 g-3">
        <div class="col-6">
          <a
            href="/listings/<%= listing._id %>/edit"
            class="btn btn-warning w-100 rounded-pill shadow-sm  d-flex justify-content-center align-items-center gap-2"
          >
            <i class="fa-solid fa-pencil"></i> Edit this listing
          </a>
        </div>
        <div class="col-6">
          <form
            action="/listings/<%= listing._id %>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-danger w-100 rounded-pill shadow-sm d-flex justify-content-center align-items-center gap-2">
              <i class="fa-solid fa-trash"></i> Delete Listing
            </button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <hr class="mt-3" />
  <div class="col-8 offset-2">
    <% if(currentUser) {%>
    <h4 class="mt-3 text-danger">Leave a review:</h4>
    <form
      action="/listings/<%=listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mt-3">
        <label for="rating" class="form-label">Rating:</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="rating"
            value="1"
            checked
            aria-label="No rating."
          />
          <input type="radio" id="first-rate1" name="rating" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="rating" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="rating" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="rating" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="rating" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Comment:</label>
        <textarea
          id="comment"
          name="comment"
          required
          class="form-control"
          rows="3"
        ></textarea>
        <div class="invalid-feedback">Please write a comment</div>
      </div>
      <button type="submit" class="btn btn-outline-danger">Submit</button>
    </form>
    <% } %>
    <h4 class="mt-3 text-danger">Reviews:</h4>
    <% if(listing.reviews.length === 0) { %>
    <p>No reviews yet.</p>
    <% } else { %>
    <div class="row">
      <% listing.reviews.forEach(review => { %>
      <div class="card mt-3 col-12 col-sm-6 col-md-5 ms-3">
        <div class="card-body">
          <h5 class="card-title">@<%= review.user.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%=review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <% if(currentUser&&review.user._id.equals(currentUser._id)){ %>
        <form
          action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-outline-danger mb-3 ms-3">Delete</button>
        </form>
        <% } %>
      </div>
      <% }); %>
    </div>
    <% } %>
  </div>
  <div class="col-6 offset-2 mt-3">
    <h3>Where you will be</h3>
    <div id="map"></div>
    <script src="/js/map.js"></script>
  </div>
</div>
